# YallaFoot API - URL Rewriting Rules
RewriteEngine On

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# CORS headers for API requests
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, X-API-Key, Authorization"

# Handle preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# API Routes - Redirect all API requests to api/index.php
RewriteCond %{REQUEST_URI} ^/api/(.*)$
RewriteRule ^api/(.*)$ api/index.php [QSA,L]

# Direct access to specific files
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ $1 [L]

# Status dashboard
RewriteRule ^status-dashboard/?$ status-dashboard.php [QSA,L]
RewriteRule ^status/?$ status-dashboard.php [QSA,L]

# Log viewer
RewriteRule ^logs/?$ log-viewer.php [QSA,L]

# Default to status dashboard for root access
RewriteRule ^$ status-dashboard.php [QSA,L]

# Block access to sensitive files
<FilesMatch "\.(log|sql|md|txt)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

<FilesMatch "^(config|classes|cron)/">
    Order Allow,Deny  
    Deny from all
</FilesMatch>